<!doctype html>
<html>
<head>
    <title>Your Profile</title>
    <!--BROWSER ICON-->
    <link rel="shortcut icon" href="img/browserIcon.png">
    <!--GOOGLE FONTS-->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Mountains+of+Christmas:wght@400;700&display=swap" rel="stylesheet">
    <!--BOOTSTRAP-->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" integrity="sha384-tViUnnbYAV00FLIhhi3v/dWt3Jxw4gZQcNoSCxCIFNJVCx7/D55/wXsrNIRANwdD" crossorigin="anonymous">
    <!--STYLESHEETS-->
    <link rel="stylesheet" href="style.css">
</head>
<body>
  <div class="container text-center grid gap-0 row-gap-5">

    <div class="page-header p-2 g-col-6">
        <h1><span class="bi bi-person-circle"></span> Your Account</h1>
        <a href="/logout" class="btn btn-danger btn-md">Logout</a>
    </div>

    <div class="p-2 g-col-6">
      <h2>Add to List</h2>

      <form action="/christmasListItem" method="POST">
        <input type="text" placeholder="Item Name" name="itemName">
        <input type="text" placeholder="Item Link" name="itemLink">
        <button type="submit" class="btn btn-primary">Submit</button>
      </form>
    </div>

    <div class="p-2 g-col-6">
      <h3>Christmas List</h3>
      <ul class="list-inline">
      <% for(var i=0; i<messages.length; i++) {%>
        <li>
          <% if (messages[i].purchased == true) { %>
            <span class="purchased"><%= messages[i].itemName %></span>
        <% } else { %>
          <span><%= messages[i].itemName %></span>
      <% } %>
          <a class="links" href="<%= messages[i].itemLink %>" target="_blank">Link to Purchase</a>
          <span><i class="bi bi-bag-check-fill"></i></span>
          <span><i class="bi bi-bag-x-fill"></i></span>
          <span><i class="bi bi-trash-fill" aria-hidden="true"></i></span>
        </li>
      <% } %>
      </ul>
    </div>

  </div>

  <script src="main.js"></script>

</body>
</html>
